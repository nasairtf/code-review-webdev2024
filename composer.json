{
    "name": "webdev2024/webdev2024",
    "description": "Webpage refactor to class-based code",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Miranda Hawarden-Ogata"
        }
    ],
    "require": {
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11",
        "phpunit/phpunit": "^8",
        "mockery/mockery": "^1.3",
        "code-lts/doctum": "^5.5"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    }
}
