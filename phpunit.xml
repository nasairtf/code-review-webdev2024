<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.5/phpunit.xsd"
         bootstrap="bootstrap.php"
         colors="true"
         processIsolation="true"
         stopOnFailure="false">
    <!-- Define environment variables for tests -->
    <php>
        <env name="TEST_TMP_DIR" value="/home/webdev2024/tmp" />
    </php>
    <testsuites>
        <testsuite name="WebDev2024 Project Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <!-- Include your class directories for coverage analysis -->
    <filter>
        <whitelist>
            <directory suffix=".php">classes</directory>
            <directory suffix=".php">public_html</directory>
        </whitelist>
    </filter>
    <!-- Generate coverage reports -->
    <logging>
        <log type="coverage-html" target="docs/phpunit/coverage-html" />
        <log type="coverage-xml" target="docs/phpunit/coverage-xml" />
    </logging>
</phpunit>
